<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuexibao.teacher.dao.TeacherSubjectDao">
	<delete id="deleteByTeacherId" parameterType="String">
		delete from teacher_subject where teacher_id=#{value}
	</delete>
	
	<insert id="batchInsert" parameterType="list">
		insert into teacher_subject (subject_id,teacher_id,create_time,update_time) 
		values
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.subjectId},#{item.teacherId},now(),now())
    	</foreach>
	</insert>
	
	<select id="querySubjectIdByTeacherId" parameterType="String" resultType="Integer">
		select subject_id from teacher_subject where teacher_id=#{value}
	</select>
</mapper> 